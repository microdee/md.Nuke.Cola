            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/TestBuild/TestBuild.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build_nukeUnrealTest",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "D:/projects/Nuke.Unreal/tests/UE_5.3/Packaging/Nuke.Targets/Nuke.Targets.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/build/_build.csproj",
                "/property:GenerateFullPaths=true",
